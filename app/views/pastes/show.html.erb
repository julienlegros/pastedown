<% if @paste.title? %>
  <% title @paste.title + " - Pastedown.io" %>
<% else %>
  <% title "Pastedown.io" %>
<% end %>

<div class="row">
  <div class="col-md-9">
    <div class="page-header">
      <h2><%= @paste.title %></h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-9">
    <div class="row">
      <div class="col-sm-8 col-md-8 col-lg-9">
        <div class="fb-like" data-layout="button_count" data-action="like" data-show-faces="false" data-share="false" data-width="90"></div>
        <div class="fb-share-button" data-type="button_count" data-width="90"></div>
        <div class="g-plusone" data-size="medium"></div>
        <a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
      </div>
      <div class="col-sm-4 col-md-4 col-lg-3 pull-right">
        <div class="paste-buttons btn-group">
          <a href="<%= repaste_paste_path(@paste) %>" class="btn btn-default"><span class="fa fa-retweet"></span> Repaste</a>
          <a href="<%= raw_paste_path(@paste) %>" class="btn btn-default"><span class="fa fa-code"></span> Raw</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-9">
    <div class="<%= @typo_class %>">
      <%= raw @markdown_html %>
    </div>
  </div>
</div>